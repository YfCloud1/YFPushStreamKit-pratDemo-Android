<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_current_buffer_size_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_current_bitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_current_fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_current_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_udp_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_udp_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@drawable/shape_blue_dot"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/shape_blue_dot"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
</RelativeLayout>